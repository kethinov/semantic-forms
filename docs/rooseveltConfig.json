{
  "makeBuildArtifacts": "staticsOnly",
  "viewEngine": [
    "html:teddy"
  ],
  "css": {
    "sourcePath": "css",
    "compiler": {
      "enable": true,
      "module": "sass",
      "options": {}
    },
    "output": "css",
    "versionFile": null
  },
  "js": {
    "sourcePath": "js",
    "webpack": {
      "enable": true,
      "bundles": [
        {
          "config": {
            "entry": "${js.sourcePath}/semantic-forms-main.js",
            "output": {
              "path": "${publicFolder}/js",
              "filename": "semantic-forms-main.js"
            },
            "resolve": {
              "alias": {
                "fs": false,
                "path": false
              },
              "modules": [
                "${js.sourcePath}",
                "${buildFolder}/js",
                "${appDir}",
                "node_modules"
              ]
            }
          }
        }
      ]
    }
  }
}
